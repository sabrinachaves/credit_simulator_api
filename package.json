{
  "name": "credit_simulator_api",
  "version": "0.0.1",
  "description": "API for credit simulations",
  "main": "src/index.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "babel src --extensions \".ts\" --out-dir dist --copy-files --no-copy-ignored",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "format": "eslint --fix '**/*.ts' && prettier --write '**/*.ts'",
    "lint": "npm run lint:tsc && eslint '**/*.ts' && prettier --check \"src/**/*.(ts|tsx)\"",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate ./src/database/migrations/$npm_config_name -d ./src/database/dataSource.ts",
    "migration:run": "npm run typeorm -- migration:run -d ./src/database/dataSource.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d ./src/database/dataSource.ts",
    "test:unit": "jest --bail --forceExit --passWithNoTests \"tests/unit/.*\\.test\\.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabrinachaves/credit_simulator_api.git"
  },
  "author": "Sabrina Chaves",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.12",
    "@types/express": "^4.17.13",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "http-status": "^1.5.2",
    "joi": "^17.5.0",
    "mongoose": "^6.13.0",
    "mysql2": "^3.11.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.4",
    "@types/uuid": "^8.3.4",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.15.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-jest": "^26.2.2",
    "husky": "^4.3.8",
    "nodemon": "^2.0.16",
    "prettier": "^2.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "ts-jest": "^27.0.7",
    "jest": "^27.4.3",
    "@faker-js/faker": "^7.1.0",
    "@types/faker": "^5.1.4"
  }
}